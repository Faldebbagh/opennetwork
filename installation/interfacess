auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp

auto eth1
iface eth1 inet static
     address 192.168.2.1
     netmask 255.255.255.0
     gateway 192.168.2.1
     dns-nameservers 192.168.2.1

auto wlan0
iface wlan0 inet static
     address 192.168.1.1
     netmask 255.255.255.0
     gateway 192.168.1.1
     dns-nameservers 192.168.1.1
